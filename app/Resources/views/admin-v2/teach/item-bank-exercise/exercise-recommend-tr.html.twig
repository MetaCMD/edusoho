{% import "admin-v2/macro.html.twig" as admin_macro %}
{% set target = 'recommend_list' %}

{% set showUrl = path('item_bank_exercise_show', {id:exercise.id}) %}
{% set cancelUrl = path('admin_v2_item_bank_exercise_cancel_recommend', {id:exercise.id}) %}
{% set recommendUrl = path('admin_v2_item_bank_exercise_recommend', {id:exercise.id}) %}

<tr id="course-tr-{{ exercise.id }}" data-sort="{{ exercise.recommendedSeq }}">
  <td>{{ exercise.recommendedSeq }}</td>
  <td>
    <a href="{{ showUrl }}" target="_blank"><strong>{{ exercise.title }}</strong></a>
    <br>
    <span class="text-muted text-sm">{{'admin.course_manage.recommend.category'|trans}}ï¼š{{ category.name|default('--') }}</span>
  </td>
  <td>
    {{ admin_macro.user_link(user) }}
    <br>
    <span class="text-muted text-sm">{{ exercise.createdTime|date('Y-n-d H:i') }}</span>
  </td>
  <td>
    {{ exercise.recommendedTime|date('Y-m-d') }}
  </td>
  <td>

    <div class="btn-group">
      <a class="btn btn-default btn-sm" href="#modal" data-toggle="modal" data-url="{{ recommendUrl }}">{{ 'admin.course_manage.recommend.set_seq_btn'|trans }}</a>

      <a href="#" type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu pull-right">

        <li>
          <a class="cancel-recommend-exercise" href="javascript:" data-url="{{ cancelUrl }}">
          <span class="glyphicon glyphicon-hand-right"></span> {{ 'admin.course_manage.recommend.cancel_seq_btn'|trans }}</a>
        </li>
    
      </ul>
    </div>
  </td>
</tr>