{% extends 'admin-v2/layout.html.twig' %}

{% set menu = 'admin_v2_data_visualization_activity_learn_flow' %}

{% block main %}

  {% if records|default([]) %}
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th width="5%">{{ 'ID'|trans }}</th>
        <th>{{ '用户ID'|trans }}</th>
        <th>{{ '教学活动ID'|trans }}</th>
        <th>{{ '活跃状态'|trans }}</th>
        <th>{{ '开始时间'|trans }}</th>
        <th>{{ '最后学习时间'|trans }}</th>
        <th>{{ '流水号'|trans }}</th>
        <th>{{ '创建时间'|trans }}</th>
      </tr>
      </thead>
      <tbody>
      {% for record in records|default([]) %}
        <tr id="job-log-table-tr-{{ record.id }}">
          <td>
            {{ record.id }}
          </td>

          <td>
            {{ record.userId }}
          </td>

          <td>
            {{ record.activityId }}
          </td>

          <td>
            {{ record.active }}
          </td>

          <td>
            {{ record.startTime|date('Y-m-d H:i:s') }}
          </td>

          <td>
            {{ record.lastLearnTime|date('Y-m-d H:i:s') }}
          </td>

          <td>
            {{ record.sign }}
          </td>

          <td>
            {{ record.createdTime|date('Y-m-d H:i:s') }}
          </td>

        </tr>
      {% endfor %}
      </tbody>

    </table>
  {% else %}
    <div class="empty">{{'无数据'|trans}}</div>
  {% endif %}
  {{ admin_macro.paginator(paginator) }}

{% endblock %}