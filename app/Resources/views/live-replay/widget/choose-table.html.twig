{% import 'macro.html.twig' as web_macro %}
{% if activities %}
  <div class="js-table-list">
    <div class="chooser-list"><table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>{{ 'course.live_replay_manage.lesson_title_th'|trans }}</th>
              <th>{{ 'course.live_replay_manage.live_length_th'|trans }}</th>
              <th>{{ 'course.live_replay_manage.live_anchor_th'|trans }}</th>
              <th>{{ 'course.live_replay_manage.live_time_th'|trans }}</th>
            </tr>
          </thead>
        <tbody>
        {% for activity in activities %}
          <tr id="material-table-tr-{{ activity.id }}" class="file-browser-item"
              data-id="{{ activity.id }}"
              data-length="{{ activity.liveSecond }}"
              data-name="{{ activity.title }}">
            <td class="mlm"> {{ activity.title }}</td>
            <td> {{ activity.liveTime }} {{'course.live_lesson_manage.live_length.minutes'|trans}}</td>
            <td> {{ activity.anchor }}</td>
            <td> {{ activity.liveStartTime }}</td>
          </tr>
        {% else %}

        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% else %}
  <div class="empty">{{'file_chooser.empty'|trans}}</div>
{% endif %}

{{ web_macro.paginator(paginator) }}
