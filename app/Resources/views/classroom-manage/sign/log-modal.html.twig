{% extends 'bootstrap-modal-layout.html.twig' %}
{% do script(['app/js/classroom-manage/sign/index.js'])%}
{% set modalSize = 'large' %}

{% block title %}
  {{'classroom.manage.sign_statictics.modal_title'|trans({'%nickname%':user.nickname})}}
{% endblock %}
{% block body %}
  <div class="js-log">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>{{'classroom.manage.sign_statictics.sign_type'|trans}}</th>
          <th>{{'classroom.manage.sign_statictics.sign_time'|trans}}</th>
        </tr>
      </thead>
      <tbody>
        {% for log in logs %}
          <tr>
            <td>{{ ('classroom.manage.sign_statictics.sign_type.'~log.targetType)|trans }}</td>
            <td>{{ log.createdTime|date('Y-m-d H:i:s') }}</td>
          </tr>
        {% else %}
          <tr class="empty">
            <td colspan="20">{{'classroom.manage.sign_statictics.empty'|trans}}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    {{ web_macro.ajax_paginator(paginator) }}
  </div>
{% endblock %}
