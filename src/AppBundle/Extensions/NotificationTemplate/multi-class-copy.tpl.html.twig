<li class="media">
  <div class="pull-left">
    <span class="glyphicon glyphicon-volume-down media-object"></span>
  </div>
  <div class="media-body">
    <div class="notification-body">
      {% if notification.content.message is defined  %}
        {{ notification.content.message }}
      {% else %}
        {% if notification.content.status|default('') == 'success' %}
          {{ 'admin.multi_class_copy.success.notify'|trans({'%newTitle%':notification.content.newTitle,'%originTitle%':notification.content.originTitle  }) }}
        {% else %}
          {{ 'admin.multi_class_copy.failure.notify'|trans({'%newTitle%':notification.content.newTitle,'%originTitle%':notification.content.originTitle  }) }}
        {% endif %}
      {% endif %}
    </div>
    <div class="notification-footer">
      {{ notification.createdTime|date('site.date_format_H_i_s'|trans) }}
    </div>
  </div>
</li>
